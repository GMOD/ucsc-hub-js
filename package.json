{
  "name": "@gmod/ucsc-hub",
  "version": "0.1.1",
  "description": "Read and write UCSC track and assembly hub files in node or the browser",
  "license": "MIT",
  "repository": "github:GMOD/ucsc-hub-js",
  "main": "dist/index.js",
  "author": {
    "name": "Garrett Stevens",
    "email": "stevens.garrett.j@gmail.com",
    "url": "https://github.com/garrettjstevens"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint .",
    "docs": "documentation readme src --section=API",
    "postdocs": "git add README.md",
    "clean": "rimraf dist",
    "prebuild": "npm run docs && npm run clean",
    "build": "babel src -d dist",
    "preversion": "npm run lint && npm test && npm run build",
    "postpublish": "git push origin master --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "trackDb",
    "genomics",
    "bionode",
    "biojs"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "documentation": "^9.0.0-alpha.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "jest-cli": "^23.6.0",
    "lint-staged": "^7.3.0",
    "opn-cli": "^3.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
