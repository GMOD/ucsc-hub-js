{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true
  }
}
